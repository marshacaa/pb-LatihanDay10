<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0EB"
    tools:context="com.example.latihan_day_10.MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="255dp"
        android:layout_height="66dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:text="When do you want to meditate?"
        android:textColor="#6A1B9A"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="247dp"
        android:layout_height="67dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="Setting a regular time for meditation can help build a habit\nYou can change this later"
        android:textColor="#6A1B9A"
        android:textSize="16sp"
        android:layout_below="@id/titleText" />

    <ImageButton
        android:id="@+id/morningButton"
        android:layout_width="79dp"
        android:layout_height="170dp"
        android:layout_below="@id/subtitleText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="34dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Morning"
        android:scaleType="fitCenter"
        android:src="@drawable/morning" />

    <ImageButton
        android:id="@+id/dayButton"
        android:layout_width="83dp"
        android:layout_height="173dp"
        android:layout_below="@id/subtitleText"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/morningButton"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Day"
        android:scaleType="fitCenter"
        android:src="@drawable/day2" />

    <ImageButton
        android:id="@+id/eveningButton"
        android:layout_width="86dp"
        android:layout_height="179dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/night"
        android:contentDescription="Evening"
        android:layout_below="@id/subtitleText"
        android:layout_toEndOf="@id/dayButton"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/noThanksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eveningButton"
        android:layout_marginTop="46dp"
        android:backgroundTint="#FFCDD2"
        android:text="No thanks"
        android:textColor="#6A1B9A"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
