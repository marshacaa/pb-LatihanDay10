<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.example.latihan_day_10.CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's get started!"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:text="Create an account to track your wellbeing and progress from any device."
            android:textColor="#757575"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/emailSignUpButtoncreate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/email11"
                android:scaleType="centerCrop"
                android:contentDescription="Sign up with Email" />

            <TextView
                android:id="@+id/emailSignUpHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign up with Email"
                android:textColor="#4A148C"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>


        <TextView
            android:id="@+id/orUseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or use one of these:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/googleSignUpButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/google33"
                android:scaleType="centerCrop"
                android:contentDescription="Sign up with Google" />

            <TextView
                android:id="@+id/googleSignUpHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign up with Google"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/facebookSignUpButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/facebok22"
                android:scaleType="centerCrop"
                android:contentDescription="Sign up with Facebook" />

            <TextView
                android:id="@+id/facebookSignUpHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign up with Facebook"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/alreadyHaveAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Already have an account? s͟i͟g͟n͟ ͟i͟n͟"
            android:textColor="#757575"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
